{% extends 'app.html.twig' %}

{% block content %}

    <div class="col-12">

        <div class="row">

            {% for article in pagination %}

                <div class="col-12 col-md-4 mb-5">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title | u.truncate(26, '...') }}</h5>
                            <small class="d-block mt-2 mb-2">Ã‰crit par {{ article.author }} le {{ article.createdAt | date('d/m/Y') }}</small>
                            <p class="card-text">{{ article.content | u.truncate(300, '...') }} <a href="{{ path('article.show', {slug: article.slug}) }}">voir plus</a></p>
                            <a href="{{ path('article.show', {slug: article.slug}) }}" class="btn btn-primary">Lire la suite</a>
                        </div>
                    </div>

                </div>

            {% endfor %}

        </div>

    </div>

    <div class="col-12">

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>

    </div>

{% endblock %}
{% extends 'app.html.twig' %}

{% block content %}

    <div class="col-12 col-md-6">

        <div class="row">

            <div class="col-12">

                <h2>Articles récents</h2>
            </div>

            <div class="col-12">

                <div class="row">

                    {% for article in mostRecentArticles %}

                        <div class="col-12 col-md-6 mb-5">

                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ article.title | u.truncate(26, '...') }}</h5>
                                    <small class="d-block mt-2 mb-2">Écrit par {{ article.author }} le {{ article.createdAt | date('d/m/Y') }}</small>

                                    <a href="{{ path('category.show', {id: article.getCategory.id}) }}"><span class="badge badge-info">{{ article.getCategory.name }}</span></a>

                                    <p class="card-text">{{ article.content | u.truncate(100, '...') }} <a href="{{ path('article.show', {slug: article.slug}) }}">voir plus</a></p>
                                    <a href="{{ path('article.show', {slug: article.slug}) }}" class="btn btn-primary">Lire la suite</a>
                                </div>
                            </div>

                        </div>

                    {% endfor %}

                </div>

            </div>

        </div>

    </div>

    <div class="col-12 col-md-6">

        <div class="row">

            <div class="col-12">

                <h2>Articles les mieux notés</h2>

            </div>

            <div class="col-12">

                <div class="row">

                    {% for article in mostLikedArticles %}

                        <div class="col-12 col-md-6 mb-5">

                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ article.title | u.truncate(26, '...') }}</h5>
                                    <small class="d-block mt-2 mb-2">Écrit par {{ article.author }} le {{ article.createdAt | date('d/m/Y') }}</small>

                                    <a href="{{ path('category.show', {id: article.getCategory.id}) }}"><span class="badge badge-info">{{ article.getCategory.name }}</span></a>

                                    <p class="card-text">{{ article.content | u.truncate(100, '...') }} <a href="{{ path('article.show', {slug: article.slug}) }}">voir plus</a></p>
                                    <a href="{{ path('article.show', {slug: article.slug}) }}" class="btn btn-primary">Lire la suite</a>
                                </div>
                            </div>

                        </div>

                    {% endfor %}

                </div>

            </div>

        </div>

    </div>

{% endblock %}

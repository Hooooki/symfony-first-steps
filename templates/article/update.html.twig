{% extends 'app.html.twig' %}

{% block content %}

    {{ form_start(articleForm) }}

    <div class="row">

        <div class="col-12 col-md-6">

            <div class="form-group">
                <label for="article_title">Titre de l'article</label>
                {{ form_widget(articleForm.title) }}
                <small class="text-danger">
                    {{ form_errors(articleForm.title) }}
                </small>
            </div>

        </div>

        <div class="col-12">

            <div class="form-group">
                <label for="article_content">Contenu de l'article</label>
                {{ form_widget(articleForm.content) }}
            </div>

        </div>

        <div class="col-12 col-md-4">

            <div class="form-group">
                <label for="article_author">Auteur</label>
                {{ form_widget(articleForm.author) }}
            </div>

        </div>

        <div class="col-12 col-md-4">

            <div class="form-group">
                <label for="article_author">Catégory</label>
                {{ form_widget(articleForm.category) }}
            </div>

        </div>


    </div>

    <div class="row">

        <div class="col-12 col-md-4">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Mettre à jour</button>
                <a href="{{ path('article.index') }}" class="btn btn-warning">Annuler</a>
            </div>
        </div>

    </div>

    {{ form_end(articleForm) }}

{% endblock %}